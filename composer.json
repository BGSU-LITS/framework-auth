{
    "name": "bgsu-lits/framework-auth",
    "description": "Auth for LITS Framework.",
    "license": "MIT",
    "authors": [
        {
            "name": "John Kloor",
            "email": "kloor@bgsu.edu"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-PDO": "*",
        "ext-filter": "*",
        "ext-hash": "*",
        "ext-ldap": "*",
        "bgsu-lits/framework": "^2.0",
        "bgsu-lits/framework-database": "^2.0",
        "jasny/auth": "^2.2",
        "latitude/latitude": "^4.2",
        "middlewares/https": "^2.0",
        "php-di/php-di": "^7.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "slim/http": "^1.1",
        "slim/slim": "^4.2",
        "symfony/event-dispatcher": "^7.0",
        "thecodingmachine/safe": "^2.5"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "neronmoon/scriptsdev": "^0.1.9",
        "phpunit/phpunit": "^9",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Lits\\": "src/Lits"
        },
        "exclude-from-classmap": [
            "/src/Lits/Test/"
        ]
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "neronmoon/scriptsdev": true
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": true
        },
        "scripts-dev": {
            "phpcbf": "phpcbf ./ --standard=phpcs.xml",
            "phpcs": "phpcs ./ --standard=phpcs.xml",
            "phplint": "phplint ./ -c phplint.yml",
            "phpstan": "phpstan analyse -c phpstan.neon",
            "phpunit": "phpunit -c phpunit.xml",
            "psalm": "psalm --config=psalm.xml",
            "test": [
                "@phplint",
                "@phpcs",
                "@phpstan",
                "@psalm",
                "@phpunit"
            ]
        }
    }
}
